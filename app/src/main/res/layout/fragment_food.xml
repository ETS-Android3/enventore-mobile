<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.FoodFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/lay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15sp"
                android:layout_marginTop="25sp"
                android:layout_marginBottom="10sp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:fontFamily="@font/bold"
                    android:text="Hi Welcome\nMalith Ileperuma"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/designer4procircle" />


            </LinearLayout>

            <EditText
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay1"
                android:layout_marginHorizontal="15sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/edittextback"
                android:textColorHint="@color/colorPrimary"
                android:elevation="10sp"
                android:hint="Enter Your Keyword Here"
                android:paddingStart="20dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lay3"
                android:layout_below="@id/lay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:fontFamily="@font/regular"
                android:text="Recent Search Keywords"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <HorizontalScrollView
                android:id="@+id/lay4"
                android:layout_below="@id/lay3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15sp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35sp"
                        android:background="@drawable/btn_border"
                        android:fontFamily="@font/bold"
                        android:text="Kottu"
                        android:textColor="@color/colorAccent"
                        android:textSize="7sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35sp"
                        android:background="@drawable/btn_border"
                        android:fontFamily="@font/bold"
                        android:paddingHorizontal="3sp"
                        android:text="Lunch"
                        android:textColor="@color/colorAccent"
                        android:textSize="7sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35sp"
                        android:background="@drawable/btn_border"
                        android:fontFamily="@font/bold"
                        android:paddingHorizontal="3sp"
                        android:text="Short Eats"
                        android:textColor="@color/colorAccent"
                        android:textSize="7sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35sp"
                        android:background="@drawable/btn_border"
                        android:fontFamily="@font/bold"
                        android:paddingHorizontal="3sp"
                        android:text="Rice and Curry"
                        android:textColor="@color/colorAccent"
                        android:textSize="7sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35sp"
                        android:background="@drawable/btn_border"
                        android:fontFamily="@font/bold"
                        android:paddingHorizontal="3sp"
                        android:text="Chinese"
                        android:textColor="@color/colorAccent"
                        android:textSize="7sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35sp"
                        android:background="@drawable/btn_border"
                        android:fontFamily="@font/bold"
                        android:paddingHorizontal="3sp"
                        android:text="Hindu"
                        android:textColor="@color/colorAccent"
                        android:textSize="7sp" />

                </LinearLayout>

            </HorizontalScrollView>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/lay5"
                android:layout_below="@id/lay4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/foodRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2"
                        tools:listitem="@layout/shop_row"
                        android:padding="4dp"
                        android:scrollbars="vertical" >
                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>


            </androidx.core.widget.NestedScrollView>


        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
