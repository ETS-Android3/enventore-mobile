<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="shopViewModel"
            type="com.example.shoppingcart.viewmodels.ShopViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@null"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:background="@color/transparent"
                    android:fontFamily="@font/regular"
                    android:src="@drawable/back"/>

            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/img"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="400sp"
                android:scaleType="fitXY"
                android:productImage="@{`http://3.144.145.92:3001/` + shopViewModel.product.imageUrl}"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400sp"
                android:background="@drawable/gradient_shade">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15sp"
                    android:paddingVertical="15sp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/productNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/bold"
                            android:text="@{shopViewModel.product.name}"
                            android:textColor="@color/White"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15sp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_location" />

                            <TextView
                                android:id="@+id/food_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/light"
                                android:text="Panadura"
                                android:textColor="@color/White"
                                android:textSize="12sp" />

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/food_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/bold"
                            android:text="@{String.valueOf(shopViewModel.product.price) + ` LKR` }"
                            android:textColor="@color/White"
                            android:textSize="18sp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15sp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_star" />

                            <TextView
                                android:id="@+id/food_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/medium"
                                android:text="4.2"
                                android:textColor="@color/White"
                                android:textSize="8sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/foodcard"
                android:layout_marginTop="-20sp"
                android:elevation="25sp">

                <TextView
                    android:id="@+id/food_ppl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/light"
                    android:text="@{shopViewModel.product.name}"
                    android:textColor="@color/black"
                    android:paddingTop="25sp"
                    android:paddingHorizontal="25sp"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/food_desc"
                    android:layout_below="@id/food_ppl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/light"
                    android:text="@{shopViewModel.product.description}"
                    android:textColor="@color/black"
                    android:paddingTop="15sp"
                    android:paddingHorizontal="25sp"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/food_tags"
                    android:layout_below="@id/food_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/light"
                    android:text="@{shopViewModel.product.genre}"
                    android:textColor="@color/black"
                    android:paddingTop="10sp"
                    android:paddingHorizontal="25sp"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/shop"
                    android:layout_below="@id/food_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20sp"
                    android:paddingVertical="15sp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        app:cardUseCompatPadding="true">

                        <ImageView
                            android:id="@+id/cat_picture"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:layout_gravity="center"
                            android:src="@drawable/comp_logo" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="15sp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/comp_name"
                            android:layout_width="wrap_content"
                            android:layout_height="25sp"
                            android:fontFamily="@font/bold"
                            android:text="Mom's Choice"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15sp"
                                android:layout_height="15dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_star" />

                            <TextView
                                android:id="@+id/comp_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:fontFamily="@font/light"
                                android:text="4.2"
                                android:paddingStart="3sp"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/bold"
                                android:text="4KM"
                                android:textColor="@color/colorAccent"
                                android:textSize="12sp"
                                android:paddingStart="35sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="20sp"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15sp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_location" />

                            <TextView
                                android:id="@+id/comp_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/light"
                                android:text="Panadura"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:weightSum="10"
                    android:paddingHorizontal="20sp"
                    android:paddingVertical="15sp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_weight="1.5"
                        android:layout_width="0sp"
                        android:layout_height="50sp"
                        android:layout_marginHorizontal="5dp"
                        android:text="Buy Now"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_border"
                        android:src="@drawable/ic_archive"
                        android:padding="15sp"/>

                    <ImageButton
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="50sp"
                        android:layout_marginHorizontal="5dp"
                        android:text="Buy Now"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_border"
                        android:src="@drawable/ic_archive"
                        android:padding="15sp"/>

                    <Button
                        android:id="@+id/addToCartButton"
                        android:enabled="@{shopViewModel.product.available}"
                        android:layout_weight="7"
                        android:layout_width="0sp"
                        android:layout_height="50sp"
                        android:layout_marginHorizontal="5dp"
                        android:text="Buy Now"
                        android:textAllCaps="false"
                        android:background="@drawable/btn_corder_round"
                        android:onClick="@{() -> shopViewModel.addItemToCart(shopViewModel.product)}"
                        android:textColor="@color/White"/>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

