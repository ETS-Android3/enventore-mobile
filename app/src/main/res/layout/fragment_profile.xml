<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/head"
                android:layout_marginTop="25sp"
                android:layout_marginHorizontal="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/bold"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_below="@id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15sp"
                android:layout_marginTop="25sp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/ripple"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    android:elevation="2sp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/user">


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="15sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_below="@id/food_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/bold"
                        android:text="Malith Ileperuma"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_below="@id/food_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/medium"
                        android:text="Final Year Project"
                        android:textColor="@color/ash"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_below="@id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="25sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_card"
                    android:layout_marginBottom="15sp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="4"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="20sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/bold"
                            android:text="Hello,"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="20sp"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/medium"
                            android:text="Enjoy Premium Food with Us"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_weight="2"
                        android:layout_width="0sp"
                        android:layout_height="100sp"
                        android:paddingTop="10sp"
                        android:src="@drawable/person1"/>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:background="@drawable/round_square_btn"
                        android:src="@drawable/ic_person"/>

                    <TextView
                        android:layout_weight="9"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:paddingStart="15sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/medium"
                        android:text="Personal Data"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_arrow_forward"/>

                </LinearLayout>

                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple"
                    android:id="@+id/prevOrders"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:background="@drawable/round_square_btn"
                        android:src="@drawable/ic_person"/>

                    <TextView
                        android:layout_weight="9"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:paddingStart="15sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/medium"
                        android:text="Previous Orders"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_arrow_forward"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/complaints"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:background="@drawable/round_square_btn"
                        android:src="@drawable/ic_person"/>

                    <TextView
                        android:layout_weight="9"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:paddingStart="15sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/medium"
                        android:text="Complaints"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_arrow_forward"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/promotions"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:background="@drawable/round_square_btn"
                        android:src="@drawable/ic_person"/>

                    <TextView
                        android:layout_weight="9"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:paddingStart="15sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/medium"
                        android:text="Coupons &amp; Promotions"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_arrow_forward"/>

                </LinearLayout>

                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:background="@drawable/round_square_btn"
                        android:src="@drawable/ic_person"/>

                    <TextView
                        android:layout_weight="9"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:paddingStart="15sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/medium"
                        android:text="Delivery Options"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_arrow_forward"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/payments"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:background="@drawable/round_square_btn"
                        android:src="@drawable/ic_money"/>

                    <TextView
                        android:layout_weight="9"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:paddingStart="15sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/medium"
                        android:text="Payment Information"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_arrow_forward"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/logOut"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/ripple"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:background="@drawable/round_square_btn"
                        android:src="@drawable/ic_logout"/>

                    <TextView
                        android:layout_weight="9"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:paddingStart="15sp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/medium"
                        android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ImageButton
                        android:layout_weight="1"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_arrow_forward"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>